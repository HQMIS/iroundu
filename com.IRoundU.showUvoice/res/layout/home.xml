<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF" >
        
    <RelativeLayout android:id="@+id/home_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#BBBBBB" >
        
        <TextView android:id="@+id/home_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dip"
            android:layout_centerInParent="true"
            android:textColor="#000000"
            android:textSize="20dp"
            android:text="@string/_home_title" />
        
    </RelativeLayout>
    
    <RelativeLayout android:id="@+id/home_user"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_title"
        android:layout_marginTop="5dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip" >
        
        <TextView android:id="@+id/home_user_image"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_alignParentLeft="true"
	        android:background="@drawable/user" />
	    
        <TextView android:id="@+id/home_user_edit"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_alignParentRight="true"
	        android:background="@drawable/button_style"
		    android:textColor="#000000"
		    android:textSize="18dp"
		    android:text="@string/_home_edit" />
        
	    <RelativeLayout android:id="@+id/home_user_info"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_toLeftOf="@id/home_user_edit"
	        android:layout_toRightOf="@id/home_user_image"
	        android:layout_margin="5dip" >
	    
	        <RelativeLayout android:id="@+id/home_user_info_name"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content" >
	            
	            <TextView android:id="@+id/home_user_info_name_text"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:textColor="#000000"
			        android:textSize="15dp"
			        android:text="Breakroutine" />
		        
			    <TextView android:id="@+id/home_user_info_name_V"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_toRightOf="@id/home_user_info_name_text"
			        android:layout_marginLeft="5dip"
			        android:textColor="#FF0000"
			        android:textSize="15dp"
			        android:text="@string/V" />
	            
	        </RelativeLayout>
	        
	        <RelativeLayout android:id="@+id/home_user_info_local"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_below="@id/home_user_info_name"
	            android:layout_marginTop="5dip" >
	            
	            <TextView android:id="@+id/home_user_info_local_sex"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:background="@drawable/sex_boy" />
		        
			    <TextView android:id="@+id/home_user_info_local_detail"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_toRightOf="@id/home_user_info_local_sex"
			        android:layout_marginLeft="5dip"
			        android:background="@drawable/button_style"
			        android:textColor="#000000"
			        android:textSize="15dp"
			        android:text="0.05km" />
	            
	        </RelativeLayout>
		    
	    </RelativeLayout>
	            
	</RelativeLayout>
	
    <LinearLayout android:id="@+id/home_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_user"
        android:layout_marginTop="5dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:orientation="horizontal"
        android:baselineAligned="false" >
        
        <RelativeLayout android:id="@+id/home_button_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dip"
            android:background="@drawable/button_style" >
            
            <TextView android:id="@+id/home_button_detail_up"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:gravity="center_horizontal"
	            android:textColor="#000000"
				android:textSize="18dp"
				android:text="详细" />
            
            <TextView android:id="@+id/home_button_detail_down"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/home_button_detail_up"
                android:layout_marginTop="1dip"
                android:singleLine="true"
                android:gravity="center_horizontal"
	            android:textColor="#000000"
				android:textSize="18dp"
				android:text="资料" />
            
        </RelativeLayout>
        
        <RelativeLayout android:id="@+id/home_button_attention"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dip"
            android:background="@drawable/button_style" >
            
            <TextView android:id="@+id/home_button_attention_up"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:gravity="center_horizontal"
	            android:textColor="#000000"
				android:textSize="18dp"
				android:text="234667" />
            
            <TextView android:id="@+id/home_button_attention_down"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/home_button_attention_up"
                android:layout_marginTop="1dip"
                android:singleLine="true"
                android:gravity="center_horizontal"
	            android:textColor="#000000"
				android:textSize="18dp"
				android:text="关注" />
            
        </RelativeLayout>
        
        <RelativeLayout android:id="@+id/home_button_fan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dip"
            android:background="@drawable/button_style" >
            
            <TextView android:id="@+id/home_button_fan_up"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:gravity="center_horizontal"
	            android:textColor="#000000"
				android:textSize="18dp"
				android:text="234667" />
            
            <TextView android:id="@+id/home_button_fan_down"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/home_button_fan_up"
                android:layout_marginTop="1dip"
                android:singleLine="true"
                android:gravity="center_horizontal"
	            android:textColor="#000000"
				android:textSize="18dp"
				android:text="粉丝" />
            
        </RelativeLayout>
        
        <RelativeLayout android:id="@+id/home_button_chat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dip"
            android:background="@drawable/button_style" >
            
            <TextView android:id="@+id/home_button_chat_up"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:gravity="center_horizontal"
	            android:textColor="#000000"
				android:textSize="18dp"
				android:text="聊天" />
            
            <TextView android:id="@+id/home_button_chat_down"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/home_button_chat_up"
                android:layout_marginTop="1dip"
                android:singleLine="true"
                android:gravity="center_horizontal"
	            android:textColor="#000000"
				android:textSize="18dp"
				android:text="记录" />
            
        </RelativeLayout>
        
    </LinearLayout>
    
    <TextView android:id="@+id/home_count"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_button"
        android:layout_marginTop="5dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:textColor="#000000"
		android:textSize="18dp"
		android:text="共有12345条说说" />
    
    <View android:id="@+id/home_divider"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/home_count"
        android:layout_marginTop="5dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:background="#888888" />
    
    <RelativeLayout android:id="@+id/home_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_divider"
        android:layout_marginTop="5dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip" >
        
        <ListView android:id="@+id/home_list_info"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
        
    </RelativeLayout>

</RelativeLayout>