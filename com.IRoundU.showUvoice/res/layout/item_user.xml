<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF" >
        
    <RelativeLayout android:id="@+id/item_user_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
        
        <TextView android:id="@+id/item_user_content_image"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_alignParentLeft="true"
	        android:background="@drawable/user" />
	    
	    <RelativeLayout android:id="@+id/item_user_content_type"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_alignParentRight="true" >
	    
		    <TextView android:id="@+id/item_user_content_type_button"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="@drawable/button_style"
		        android:visibility="visible"
		        android:textColor="#FF0000"
		        android:textSize="18dp"
		        android:text="@string/_near_focus" />
		    
		    <TextView android:id="@+id/item_user_content_type_arrow"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="@drawable/playarrow"
		        android:visibility="gone" />
		    
	    </RelativeLayout>
	            
	    <RelativeLayout android:id="@+id/item_user_content_info"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_toLeftOf="@id/item_user_content_type"
	        android:layout_toRightOf="@id/item_user_content_image"
	        android:layout_centerVertical="true"
	        android:layout_margin="8dip" >
	        
	        <RelativeLayout android:id="@+id/item_user_content_info_up"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content" >
	            
	            <TextView android:id="@+id/item_user_content_info_up_name"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textColor="#000000"
	                android:textSize="15dp"
	                android:text="微音官方新闻台" />
	            
	            <TextView android:id="@+id/item_user_content_info_up_V"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_toRightOf="@id/item_user_content_info_up_name"
	                android:layout_marginLeft="5dip"
	                android:textColor="#FF0000"
	                android:textSize="15dp"
	                android:text="@string/V" />
	            
	        </RelativeLayout>
	        
	        <RelativeLayout android:id="@+id/item_user_content_info_down"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_below="@id/item_user_content_info_up"
	            android:layout_marginTop="3dip" >
	            
	            <TextView android:id="@+id/item_user_content_info_down_sex"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:background="@drawable/sex_boy" />
	            
	            <RelativeLayout android:id="@+id/item_user_content_info_down_type"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
		            android:layout_toRightOf="@id/item_user_content_info_down_sex"
		            android:layout_marginLeft="15dip" >
	                
	                <TextView android:id="@+id/item_user_content_info_down_type_fan"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		        		android:visibility="visible"
		                android:textColor="#000000"
		                android:textSize="15dp"
		                android:text="@string/default_fan" />
	                
		            <TextView android:id="@+id/item_user_content_info_down_type_local"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:visibility="gone"
		                android:textColor="#000000"
		                android:textSize="15dp"
		                android:text="0.05km" />
	                
	            </RelativeLayout>
	            
	        </RelativeLayout>
	        
	    </RelativeLayout>
        
    </RelativeLayout>
    
    <View android:id="@+id/item_user_divider"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/item_user_content"
        android:layout_marginTop="5dip"
        android:background="#444444" />

</RelativeLayout>