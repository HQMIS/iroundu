<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >
    
	<RelativeLayout android:id="@+id/sound_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:background="#BBBBBB" >
    	
	    <TextView android:id="@+id/sound_title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dip"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:background="@drawable/back"
            android:textSize="18dp"
            android:textColor="#000000"
            android:text="@string/_back" />
	    
        <TextView android:id="@+id/sound_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="18dp"
            android:textColor="#000000"
            android:text="Breakroutine" />
        
        <TextView android:id="@+id/sound_title_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="15dip"
            android:layout_centerVertical="true"
            android:background="@drawable/button_style"
            android:focusable="false"
            android:textSize="12dp"
            android:textColor="#000000"
            android:text="信息流" />
        
    </RelativeLayout>
    
    <RelativeLayout android:id="@+id/sound_Layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/sound_title"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip" >
	    
    </RelativeLayout>
    
</RelativeLayout>