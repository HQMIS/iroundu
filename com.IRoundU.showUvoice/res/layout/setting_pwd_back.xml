<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >
    
    <RelativeLayout android:id="@+id/setting_pwd_back_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:background="#BBBBBB" >
    	
    	<TextView android:id="@+id/setting_pwd_back_title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dip"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:background="@drawable/back"
            android:textSize="18dp"
            android:textColor="#000000"
            android:text="@string/_back" />
	    
	    <TextView android:id="@+id/setting_pwd_back_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="15dip"
	        android:focusable="false"
	        android:textSize="20dp"
	        android:textColor="#000000"
	        android:text="@string/_setting_pwd_find" />
        
    </RelativeLayout>

    <RelativeLayout android:id="@+id/setting_pwd_back_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/setting_pwd_back_title"
        android:layout_margin="15dip" >
        
       	<TextView android:id="@+id/setting_pwd_back_content_image"
       	    android:layout_width="wrap_content"
       	    android:layout_height="wrap_content"
       	    android:layout_centerHorizontal="true"
       	    android:background="@drawable/iroundu" />
        
       	<TextView android:id="@+id/setting_pwd_back_content_text"
       	    android:layout_width="fill_parent"
       	    android:layout_height="wrap_content"
       	    android:layout_below="@id/setting_pwd_back_content_image"
       	    android:layout_marginTop="10dip"
       	    android:textColor="#000000"
       	    android:textSize="15dp"
       	    android:text="@string/_setting_pwd_text" />
       	
       	<EditText android:id="@+id/setting_pwd_back_content_email"
       	    android:layout_width="fill_parent"
       	    android:layout_height="wrap_content"
       	    android:layout_below="@id/setting_pwd_back_content_text"
       	    android:layout_marginTop="10dip"
       	    android:background="@drawable/button_style"
       	    android:textColor="#888888"
       	    android:textSize="15dp"
       	    android:hint="@string/_setting_pwd_email" />
       	
       	<TextView android:id="@+id/setting_pwd_back_content_btn"
       	    android:layout_width="wrap_content"
       	    android:layout_height="wrap_content"
       	    android:layout_below="@id/setting_pwd_back_content_email"
       	    android:layout_marginTop="10dip"
       	    android:layout_alignParentRight="true"
       	    android:layout_marginRight="5dip"
       	    android:background="@drawable/button_style"
       	    android:textColor="#000000"
       	    android:textSize="18dp"
       	    android:text="@string/_setting_pwd_sure" />
       	
    </RelativeLayout>
    
</RelativeLayout>